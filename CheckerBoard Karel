import stanford.karel.*;

public class CheckerboardKarel extends SuperKarel {

	public void run(){
		  fillRow();
		  xUp();
		  faceEast();
		  move();
		  fillRow();
		  xDown();
	}
	
	public void fillRow() {
		  while(frontIsClear()) {
			  if(noBeepersPresent()) {
				  putBeeper();
				  move();
			  }
		  }
		  putBeeper();
	}

  public void clearWallUp() {
	  faceNorth();
	  move();
	  faceWest();
	  move();
  }

  public void clearWallDown() {
	  faceSouth();
	  move();
	  faceWest();
	  move();
  }

  public void xUp() {
	  clearWallUp();
	    if(noBeepersPresent()) {
		    putBeeper();
	    }
    
	while(frontIsClear()) {
		clearWallUp();
		if(noBeepersPresent()) {
		putBeeper();
		    }
	    }
   }

  public void xDown() {
	  clearWallDown();
	  if(noBeepersPresent()) {
	  putBeeper();
	  }
  
	while(frontIsClear()) {
		clearWallDown();
		  if(noBeepersPresent()) {
		    putBeeper();
		    }
	    }
    }

public void faceNorth() {
	while(notFacingNorth()) {
		turnLeft();
		}
	}
  
public void faceWest() {
	while(notFacingWest()) {
		turnLeft();
		}
	}

public void faceSouth() {
	while(notFacingSouth()) {
		turnLeft();
		}
	}

public void faceEast() {
	while(notFacingEast()) {
		turnLeft();
		}
	}
}

	
	
